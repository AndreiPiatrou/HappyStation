@model CommentVewModel

@{
    Layout = null;
}

<div class="3u">
    <section>
        <h2>
            @Strings.LastComment
        </h2>

        <div class="balloon">
            <blockquote>
                @Html.Raw(Model.ShortText)
            </blockquote>
            <strong>&ndash;&nbsp;&nbsp;@Model.UserName</strong>
        </div>
    </section>

    @Html.ActionLink(Strings.Comments, "List", "Comments", new { @class = "button" })
</div>