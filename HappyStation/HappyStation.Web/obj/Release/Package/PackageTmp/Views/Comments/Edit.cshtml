@model CommentVewModel

@{
    ViewBag.Title = Strings.CommentsEdit;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9ut">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Save", "Comments", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.HiddenFor(m => m.Id)

            <fieldset>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.Text)
                        @Html.EditorFor(m => m.Text)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.EditorFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.IsAccepted)
                        @Html.EditorFor(m => m.IsAccepted)

                    </li>
                </ol>
                <input type="submit" value="@Strings.Save" />
            </fieldset>
        }
    </div>
</div>

