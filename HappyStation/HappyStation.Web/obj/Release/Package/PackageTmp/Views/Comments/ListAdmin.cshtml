@model IEnumerable<CommentVewModel>

@{
    ViewBag.Title = Strings.Comments;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9u skel-cell-important">

        <section>
            <header>
                <h2>@ViewBag.Title</h2>
            </header>
            <div class="3u">
                @Html.ActionLink(Strings.Add, "Edit", "Comments", null, new { @class = "button" })
            </div>

            <table width="500" class="list-table">
                @foreach (var comment in Model)
                {
                    <tr>
                        <td width="40%">
                            @Html.ActionLink(comment.UserName, "Comment", "Comments", new { @id = comment.Id }, null)
                        </td>
                        <td width="20%">
                            @Html.ActionLink(Strings.Edit, "Edit", "Comments", new { @id = comment.Id }, null)
                        </td>
                        <td width="20%">
                            @if (!comment.IsAccepted)
                            {
                                @Html.ActionLink(Strings.Approve, "AcceptComment", "Comments", new { @id = comment.Id }, null)
                            }
                        </td>
                        <td width="20%">
                            @Html.ActionLink(Strings.Delete, "Delete", "Comments", new { @id = comment.Id }, null)
                        </td>
                    </tr>
                }
            </table>

            @if (ViewBag.HasPrevPage)
            {
                @Html.ActionLink(Strings.Previos, "ListAdmin", "Comments", new { @pageNum = ViewBag.PreviosPage }, new { @class = "button" })
            }

            @if (ViewBag.HasNextPage)
            {
                @Html.ActionLink(Strings.Next, "ListAdmin", "Comments", new { @pageNum = ViewBag.NextPage }, new { @class = "button" })
            }

        </section>
    </div>
</div>
