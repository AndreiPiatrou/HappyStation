@model IEnumerable<ServiceViewModel>

@{
    ViewBag.Title = Strings.Services;
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9u skel-cell-important">

        <section>
            <header>
                <h2>@Strings.Services</h2>
            </header>
            <div class="3u">
                @Html.ActionLink(Strings.Add, "Edit", "Services", null, new { @class = "button" })
            </div>

            <table width="500" class="list-table">
                @foreach (var service in Model)
                {
                    <tr>
                        <td width="50%">
                            @Html.ActionLink(service.Title, "Service", "Services", new { @id = service.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Edit, "Edit", "Services", new { @id = service.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Delete, "Delete", "Services", new { @id = service.Id }, null)
                        </td>
                    </tr>
                }
            </table>

            @if (ViewBag.HasPrevPage)
            {
                @Html.ActionLink(Strings.Previos, "ListAdmin", "Services", new { @pageNum = ViewBag.PreviosPage }, new { @class = "button" })
            }

            @if (ViewBag.HasNextPage)
            {
                @Html.ActionLink(Strings.Next, "ListAdmin", "Services", new { @pageNum = ViewBag.NextPage }, new { @class = "button" })
            }

        </section>
    </div>
</div>