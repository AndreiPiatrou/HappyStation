@model IEnumerable<PageContentViewModel>

@{
    ViewBag.Title = Strings.PageContent;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9u skel-cell-important">

        <section>
            <header>
                <h2>@Strings.PageContent</h2>
            </header>
            <div class="3u">
                @Html.ActionLink(Strings.Add, "Edit", "PageContent", null, new { @class = "button" })
            </div>

            <table width="500" class="list-table">
                @foreach (var pageContent in Model)
                {
                    <tr>
                        <td width="50%">
                            @pageContent.Type.ToString()
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Edit, "Edit", "PageContent", new { @id = pageContent.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Delete, "Delete", "PageContent", new { @id = pageContent.Id }, null)
                        </td>
                    </tr>
                }
            </table>

        </section>
    </div>
</div>