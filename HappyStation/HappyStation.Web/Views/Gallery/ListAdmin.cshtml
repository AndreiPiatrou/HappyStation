@model IEnumerable<PhotoAlbumViewModel>

@{
    ViewBag.Title = Strings.Albums;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9u skel-cell-important">

        <section>
            <header>
                <h2>@ViewBag.Title</h2>
            </header>
            <div class="3u">
                @Html.ActionLink(Strings.Add, "EditAlbum", "Gallery", null, new { @class = "button" })
            </div>

            <table width="500" class="list-table">
                @foreach (var album in Model)
                {
                    <tr>
                        <td width="50%">
                            @Html.ActionLink(string.IsNullOrEmpty(album.Title) ? album.Id.ToString() : album.Title, "Album", "Gallery", new { @id = album.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Edit, "EditAlbum", "Gallery", new { @id = album.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Delete, "Delete", "Gallery", new { @id = album.Id }, null)
                        </td>
                    </tr>
                }
            </table>

            @if (ViewBag.HasPrevPage)
            {
                @Html.ActionLink(Strings.Previos, "ListAdmin", "Gallery", new { @pageNum = ViewBag.PreviosPage }, new { @class = "button" })
            }

            @if (ViewBag.HasNextPage)
            {
                @Html.ActionLink(Strings.Next, "ListAdmin", "Gallery", new { @pageNum = ViewBag.NextPage }, new { @class = "button" })
            }

        </section>
    </div>
</div>