@model ServiceViewModel
@{
    ViewBag.Title = Model.Title;
    ViewBag.ShareTitle = Model.Title;
    ViewBag.PageDescription = ViewBag.ShareDescription = Model.Description.StripTags();
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main" class="container">
    <div class="row">

        @Html.Action("PreviewList", "Services")

        <div class="9u skel-cell-important">
            <section>
                <header>
                    <h2>@Model.Title</h2>
                    <span class="byline">
                        @Model.ShortDescription
                    </span>
                </header>
                <div>
                    @Html.Raw(Model.Description)
                </div>

                @Html.Action("ShareThis", "Contacts")

            </section>
        </div>
    </div>
</div>