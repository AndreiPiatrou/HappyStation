@model IEnumerable<NewsViewModel>

@{
    ViewBag.Title = Strings.News;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="container">
    <div class="9u skel-cell-important">

        <section>
            <header>
                <h2>@ViewBag.Title</h2>
            </header>
            <div class="3u">
                @Html.ActionLink(Strings.Add, "Edit", "News", null, new { @class = "button" })
            </div>

            <table width="500" class="list-table">
                @foreach (var news in Model)
                {
                    <tr>
                        <td width="50%">
                            @Html.ActionLink(news.Title, "News", "News", new { @id = news.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Edit, "Edit", "News", new { @id = news.Id }, null)
                        </td>
                        <td width="25%">
                            @Html.ActionLink(Strings.Delete, "Delete", "News", new { @id = news.Id }, null)
                        </td>
                    </tr>
                }
            </table>

            @if (ViewBag.HasPrevPage)
            {
                @Html.ActionLink(Strings.Previos, "ListAdmin", "News", new { @pageNum = ViewBag.PreviosPage }, new { @class = "button" })
            }

            @if (ViewBag.HasNextPage)
            {
                @Html.ActionLink(Strings.Next, "ListAdmin", "News", new { @pageNum = ViewBag.NextPage }, new { @class = "button" })
            }

        </section>
    </div>
</div>