@model NewsViewModel
@{
    ViewBag.Title = Model.Title;
    ViewBag.ShareTitle = Model.Title;
    ViewBag.PageDescription = ViewBag.ShareDescription = Model.Text.StripTags();

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main" class="container">
    <div class="row">

        @Html.Action("PreviewList", "News")

        <div class="9u skel-cell-important">
            <section>
                <header>
                    <h2>@Model.Title</h2>
                </header>
                <div>
                    @Html.Raw(Model.Text)
                </div>

                @Html.Action("ShareThis", "Contacts")

            </section>
        </div>
    </div>
</div>