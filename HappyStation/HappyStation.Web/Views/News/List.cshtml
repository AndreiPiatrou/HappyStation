                <header>
                    <h2>
                        @ViewBag.Title
                    </h2>
                </header>
            </section>
            <div id="marketing" class="row container-secondary">
                <ul class="horizontal-list">
                    @foreach (NewsViewModel service in Model)
                    {
                        <li class="3u">
                            <section>
                                <header>
                                    <h2>@service.Title</h2>
                                </header>
                                <p class="subtitle">@service.ShortText</p>
                                <p>
                                    <a href="@Url.Action("News", new { id = service.Id })">
                                        <div class="service-main">
                                            <img src="@service.Image" alt="@service.Title" />
                                        </div>
                                    </a>
                                </p>
                                <a href="@Url.Action("News", new { id = service.Id })" class="button">@Strings.More</a>
                            </section>
                        </li>
                    }
                </ul>
            </div>

            @if (ViewBag.HasPrevPage)
            {
                @Html.ActionLink(Strings.Previos, "List", "News", new { @pageNum = ViewBag.PreviosPage }, new { @class = "button" })
            }

            @if (ViewBag.HasNextPage)
            {
                @Html.ActionLink(Strings.Next, "List", "News", new { @pageNum = ViewBag.NextPage }, new { @class = "button" })
            }

        </div>
    </div>
</div>
